[sqlfluff]
# dbt best practices configuration
templater = dbt
dialect = bigquery  # Change to your warehouse: snowflake, redshift, postgres, etc.

# Enforce code quality rules
rules = all

# Exclude dbt-generated files
exclude_rules = 
    # Allow jinja template usage
    templating.T001,
    # Allow columns referenced from ephemeral models
    references.RF03

[sqlfluff:indentation]
# Standard indentation
indented_joins = true
indented_ctes = true
indented_using_on = true
template_blocks_indent = true

[sqlfluff:layout:type:comma]
# Trailing commas for better diffs
spacing_before = touch
line_position = trailing

[sqlfluff:rules:capitalisation.keywords]
# Consistent keyword casing
capitalisation_policy = upper

[sqlfluff:rules:capitalisation.identifiers]
# Table and column naming
capitalisation_policy = lower

[sqlfluff:rules:capitalisation.functions]
# Function naming
capitalisation_policy = upper

[sqlfluff:rules:capitalisation.literals]
# Literal values
capitalisation_policy = upper

[sqlfluff:rules:aliasing.table]
# Enforce table aliasing for readability
aliasing = explicit

[sqlfluff:rules:aliasing.column]
# Enforce column aliasing when needed
aliasing = explicit

[sqlfluff:rules:aliasing.expression]
# Enforce expression aliasing
aliasing = explicit

[sqlfluff:rules:ambiguous.column_references]
# Prevent ambiguous column references
group_by_and_order_by_style = explicit

[sqlfluff:rules:convention.select_trailing_comma]
# Enforce trailing commas in SELECT
select_clause_trailing_comma = forbid

[sqlfluff:rules:structure.subquery]
# Enforce proper subquery formatting
forbid_subquery_in = both

[sqlfluff:rules:references.from]
# Enforce proper FROM clause structure
force_enable = true

# dbt-specific rules
[sqlfluff:templater:dbt]
# dbt project configuration
project_dir = .
profiles_dir = ~/.dbt
profile = default

# Additional dbt best practice rules
[sqlfluff:rules:convention.not_equal]
# Prefer != over <>
preferred_not_equal_style = ansi

[sqlfluff:rules:convention.casting_style]
# Prefer :: casting in compatible dialects
preferred_type_casting_style = shorthand

[sqlfluff:rules:convention.count_rows]
# Prefer COUNT(*) over COUNT(1)
prefer_count_1 = false

[sqlfluff:rules:layout.long_lines]
# Line length limit
ignore_comment_lines = false
ignore_comment_clauses = false